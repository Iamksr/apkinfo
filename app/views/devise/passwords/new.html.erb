<div class="title">
<h1>Forgot your password?</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <h2><%= f.label :email %></h2><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Enter Your Email Id"%>
  </div>
  <div class="action">
  <%= f.submit "Send me reset password instructions",class: "password" %> 
  </div> 
<% end %>

<%= render "devise/shared/links" %>
</div>
